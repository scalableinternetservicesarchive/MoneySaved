<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<% @user ||= current_user %>
<div class="stats">
	<a href="<%= likedDeals_user_path(@user) %>">
		<strong id="likes" class="stat">
			<%= @user.likedDeals.count %>
		</strong>
	likedDeals
	</a>
</div>